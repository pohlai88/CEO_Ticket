{
  "name": "ceo-request-ticketing-system",
  "version": "1.0.0",
  "description": "CEO-driven request, approval, announcements & executive communication system",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "validate": "npm run type-check && npm run lint && npm run validate:glossary",
    "validate:glossary": "node scripts/validate-glossary.js",
    "validate:exec": "npx tsx scripts/validate-exec-actions.ts",
    "prd:generate": "prd-guard generate",
    "prd:validate": "prd-guard validate",
    "prd:check": "prd-guard check",
    "validate:all": "npm run validate && npm run test && npm run validate:exec && npm run prd:validate && npm run prd:check",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.45.0",
    "@tanstack/react-query": "^5.28.0",
    "@tanstack/react-table": "^8.11.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "date-fns": "^3.0.0",
    "dompurify": "^3.0.6",
    "lucide-react": "^0.562.0",
    "next": "^16.0.0",
    "pdfjs-dist": "^4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.51.0",
    "server-only": "^0.0.1",
    "tailwindcss": "^3.4.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "next-devtools-mcp": "^0.3.8",
    "postcss": "^8.4.32",
    "prd-guard": "github:pohlai88/PRD_GUARD",
    "shadcn-ui": "^0.9.5",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
